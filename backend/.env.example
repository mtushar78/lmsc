# Backend Environment Variables
# Copy this to .env and fill in actual values

# Database Connection (PostgreSQL via Neon or local)
DATABASE_URL="postgresql://user:password@localhost:5432/lmsc_db"

# Redis Connection (optional, for caching)
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=4000
NODE_ENV=development

# CORS Configuration (allow frontend to make requests)
CORS_ORIGIN="http://localhost:3000"

# JWT Secret (use strong random string in production)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Prisma Configuration
PRISMA_ACCELERATE_URL=""  # Optional: for Prisma Accelerate edge caching
